{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "paths": {
            "@components/*": [
                "./src/components/*"
            ],
            "@screens": [
                "./src/screens/index.tsx"
            ],
            "@routes": [
                "./src/routes/index.tsx"
            ],
            "@theme": [
                "./src/global/styles/index.tsx"
            ],
            "@types": [
                "./src/types/index.ts"
            ],
            "@utils": [
                "./src/utils/index.tsx"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}
